{
    "name": "translator-plugin",
    "displayName": "Translator Plugin",
    "description": "A VSCode plugin to translate selected text using Baidu Translate API.",
    "version": "1.0.0",
    "engines": {
      "vscode": "^1.70.0"
    },
    "categories": ["Other"],
    "activationEvents": ["onCommand:translator.translate"],
    "main": "./out/extension.js",
    "contributes": {
      "configuration": {
        "title": "Translator",
        "properties": {
          "translator.service": {
            "type": "string",
            "default": "baidu",
            "enum": ["baidu", "youdao", "llm"],
            "enumDescriptions": [
              "使用百度翻译服务",
              "使用有道翻译服务",
              "使用大语言模型翻译"
            ],
            "description": "选择要使用的翻译服务"
          },
          "translator.language": {
            "type": "object",
            "properties": {
              "source": {
                "type": "string",
                "default": "auto",
                "description": "源语言（auto表示自动检测）"
              },
              "target": {
                "type": "string",
                "default": "zh",
                "description": "目标语言"
              }
            }
          },
          "translator.baidu": {
            "type": "object",
            "description": "百度翻译配置",
            "properties": {
              "appId": {
                "type": "string",
                "description": "百度翻译服务的App ID"
              },
              "key": {
                "type": "string",
                "description": "百度翻译服务的密钥"
              }
            }
          },
          "translator.youdao": {
            "type": "object",
            "description": "有道翻译配置",
            "properties": {
              "appId": {
                "type": "string",
                "description": "有道智云应用ID"
              },
              "key": {
                "type": "string",
                "description": "有道智云应用密钥"
              }
            }
          },
          "translator.llm": {
            "type": "object",
            "description": "大语言模型配置",
            "properties": {
              "provider": {
                "type": "string",
                "default": "deepseek",
                "enum": ["openai", "deepseek", "qwen"],
                "description": "选择LLM服务提供商"
              },
              "key": {
                "type": "string",
                "description": "API密钥"
              },
              "model": {
                "type": "string",
                "default": "deepseek-chat",
                "description": "使用的模型名称"
              },
              "prompt": {
                "type": "string",
                "default": "将下面的文本翻译成{targetLang}：\n{text}",
                "description": "翻译提示词模板"
              }
            }
          }
        }
      },
      "commands": [
        {
          "command": "translator.translate",
          "title": "Translate Selected Text"
        }
      ],
      "keybindings": [
        {
          "command": "translator.translate",
          "key": "ctrl+alt+t",
          "when": "editorTextFocus"
        }
      ]
    },
    "scripts": {
      "compile": "npx tsc -p ./",
      "watch": "npx tsc -watch -p ./",
      "postinstall": "npm run compile"
    },
    "devDependencies": {
      "@types/node": "^18.0.0",
      "@types/vscode": "^1.70.0",
      "typescript": "^4.9.5"
    },
    "dependencies": {
      "axios": "^1.3.4"
    }
  }